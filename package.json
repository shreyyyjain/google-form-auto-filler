{
  "name": "gformtasker-clone",
  "version": "1.0.0",
  "description": "Production-ready Chrome extension for automating Google Forms submissions",
  "private": true,
  "scripts": {
    "build": "node esbuild.config.js",
    "build:watch": "node esbuild.config.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "chrome-extension",
    "google-forms",
    "automation",
    "manifest-v3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^8.55.0",
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.242",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.4",
    "esbuild": "^0.19.11",
    "eslint": "^8.55.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
