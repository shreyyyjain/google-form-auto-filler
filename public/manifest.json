{
  "manifest_version": 3,
  "name": "GFormTasker-Clone",
  "version": "1.0.0",
  "description": "Automate Google Forms submissions with presets, randomization, and batch processing",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://docs.google.com/forms/*"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "GFormTasker-Clone",
    "default_icon": {
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/forms/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'none';"
  }
}
